    build-depends:
        base            >= 4        && < 5
      , containers      >= 0.5      && < 0.6
      , vector          >= 0.10     && < 0.12
      , mtl             >= 2.1      && < 2.3
      , transformers    >= 0.3      && < 0.5

    exposed-modules:
        Data.DAWG.Ord
      , Data.DAWG.Int

    other-modules:
